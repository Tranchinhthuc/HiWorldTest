<div style="margin-top: 50px">
  <h2>Top commented Instagrammer</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Index</th>
        <th>User</th>
        <th>Comment count</th>
      </tr>
    </thead>
    <tbody>
      <% @instagrammers.each_with_index do |(key, value), index| %>
        <tr>
          <td><%= "#{index}" %></td>
          <td><%= key %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
