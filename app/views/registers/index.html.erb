<div>
  <h2>Hashtags</h2>
  <%= render "registers/form" %>
</div>
<div style="margin-top: 50px">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Hashtag</th>
        <th>Count</th>
        <th>Link</th>
      </tr>
    </thead>
    <tbody>
      <% @registers.each do |register| %>
        <tr>
          <td><%= register.value %></td>
          <td><%= register.fetch_data? ? eval(register.fetch_data)[:amount] : "fetching..." %></td>
          <td><%= link_to_if(register.fetch_data?, "Show", register_path(register)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
